<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
    
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (user) {%>
      Logged in as :
      &nbsp;
      <span class="mr-3"><%= user.email %></span>
      <!-- &nbsp; &nbsp; -->
      <form action="/logout" method="POST">
        <button type="submit" class="btn border border-dark">Logout</button>
      </form>
    <%} else {%>
      <form action="/login" method="POST">
        <div class="d-flex">
          <input type="username" name="username" placeholder="Username" class="form-control mr-2">
          <button type="submit" class="btn border border-dark">Login</button>
        </div>
      </form>
    <%}%> 
  </nav>
</header>